{
  "manifest_version": 3,
  "name": "Copy Titled Link",
  "description": "Copies the title and URL of the current page to the clipboard",
  "version": "0.1.3",
  "icons": {
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["scripting", "activeTab", "notifications"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      }
    }
  }
}